      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "https://api.maidconnect.com/api/v1/auth/signup",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "signup"
              ]
            },
            "description": "Create new user account (maid or employer)",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Meskerem\",\n  \"email\": \"meskerem@example.com\",\n  \"phone\": \"+251912345678\",\n  \"password\": \"StrongPass123!\",\n  \"role\": \"maid\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "https://api.maidconnect.com/api/v1/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            },
            "description": "Login and retrieve JWT token",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"meskerem@example.com\",\n  \"password\": \"StrongPass123!\"\n}"
            }
          }
        },
        {
          "name": "Check Auth",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "https://api.maidconnect.com/api/v1/auth/check-auth",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "check-auth"
              ]
            },
            "description": "Verify active JWT session"
          }
        }
      ]
